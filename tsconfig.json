{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
    "sourceMap": true,
    "declaration": true,
		"esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
	},
	"include": ["./src/**/*.ts","./src/**/*.d.ts"],
	"exclude": ["node_modules","__test__"],
	"typedocOptions": {
		"mode": "modules",
		"out": "docs"
	}
}
